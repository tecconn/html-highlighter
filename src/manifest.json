{
	"name": "HTML Highlighter",
	"description": "Highlights html with pattern matching",
	"manifest_version": 2,
	"version": "0.0.1",
	"icons": {
		"128": "img/app/tag-icon-blue-128.png",
		"48": "img/app/tag-icon-blue-48.png",
		"16": "img/app/tag-icon-blue-16.png"
	},
	"browser_action": {
		"default_icon": {
			"128": "img/app/tag-icon-blue-128.png",
			"48": "img/app/tag-icon-blue-48.png",
			"16": "img/app/tag-icon-blue-16.png"
		},
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage",
		"http://*/*",
		"https://*/*"
	],
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"css": [
				"css/app/style.css"
			],
			"js": [
				"js/jquery/jquery-3.2.1.min.js",
				"js/app/main.js"
			]
		}
	]
}